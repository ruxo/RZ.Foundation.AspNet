@inherits ReactiveComponentBase<ShellAppBarViewModel>

<MudAppBar Elevation="1">
    <MudIconButton Icon="@ViewModel!.Icon" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ViewModel.Clicked.OnExecute()"/>
    @Title
    <MudSpacer/>
    <MudStack Row="true">
        @Actions
    </MudStack>
</MudAppBar>

@code {

    [Parameter] public RenderFragment? Title { get; set; }
    [Parameter] public RenderFragment? Actions { get; set; }

    public ShellAppBar(IActivator activator) {
        ViewModel = activator.Create<ShellAppBarViewModel>();
    }
}