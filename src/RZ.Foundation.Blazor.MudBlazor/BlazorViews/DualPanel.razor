<MudGrid Spacing="2" Class="@EffectiveClass" Style="@Style">
    <MudItem md="6" Class="max-height">
        <MudPaper Class="pa-8 rounded-xl max-height" Style="@PaperStyle">
            @LeftPanel
        </MudPaper>
    </MudItem>

    @if (ShowRightPanel && RightPanel is not null){
        <MudItem md="6" Class="max-height">
            <MudPaper Class="pa-8 rounded-xl max-height" Style="@PaperStyle">
                @RightPanel
            </MudPaper>
        </MudItem>
    }
</MudGrid>