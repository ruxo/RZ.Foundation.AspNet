
<MudContainer MaxWidth="@(MaxWidth ?? DefaultMaxWidth ?? MudBlazor.MaxWidth.False)" Gutters="false" Class="@EffectiveClass" Style="@Style">
    @if (Content is not null){
        <ViewFrom Model="Content"/>
    }
    else{
        @ChildContent
    }
</MudContainer>

@code {

    [Parameter] public string? Class { get; set; }
    [Parameter] public string? Style { get; set; }

    string EffectiveClass => $"max-height {Class}";

}