
<MudContainer MaxWidth="@(MaxWidth ?? DefaultMaxWidth ?? MudBlazor.MaxWidth.False)" Class="@EffectiveClass">
    @if (Content is not null){
        <ViewFrom Model="Content"/>
    }
    else{
        @ChildContent
    }
</MudContainer>

@code {

    [Parameter] public string? Class { get; set; }

    string EffectiveClass => $"max-height {Class}";

}