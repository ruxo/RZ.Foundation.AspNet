@page "/shell"

@using RZ.Foundation.Blazor.Helpers
@inherits ReactiveInjectableComponentBase<ContentViewModel>

@rendermode InteractiveServer

<PageTitle>Content View</PageTitle>

<SectionContent SectionName="appbar-title">
    <MudText Typo="Typo.h6">Shell Content</MudText>
</SectionContent>

<SectionContent SectionName="drawer-title">
    <MudDrawerHeader>
        <MudText>Example</MudText>
    </MudDrawerHeader>
</SectionContent>

<ViewStack>
    <MudText Typo="Typo.h3">Content View</MudText>
    <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="@ViewModel!.OpenModal.OnExecute()">Show modal</MudButton>
    <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="@ViewModel!.ShowNewPage.OnExecute()">New page on top</MudButton>
    <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="@ViewModel!.PopupSuccess.OnExecute()">Show success popup</MudButton>
    <MudButton Color="Color.Error" Variant="Variant.Outlined" OnClick="@ViewModel!.PopupFailure.OnExecute()">Show failure popup</MudButton>
</ViewStack>
